<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ManageUsersController" spacing="10" alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
    <TableView fx:id="usersTable" prefHeight="200.0">
        <columns>
            <TableColumn fx:id="firstNameColumn" text="First Name" prefWidth="150.0"/>
            <TableColumn fx:id="lastNameColumn" text="Last Name" prefWidth="150.0"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="150.0"/>
        </columns>
    </TableView>

    <TextField fx:id="firstNameField" promptText="First Name"/>
    <TextField fx:id="lastNameField" promptText="Last Name"/>
    <TextField fx:id="emailField" promptText="Email"/>

    <Button fx:id="editUserButton" text="Edit User"/>
</VBox>
