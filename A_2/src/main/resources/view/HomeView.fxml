<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?> <!-- Import Pane -->

<VBox prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx/fxml/1">
    <children>
        <Label fx:id="welcomeLabel" text="Welcome" style="-fx-font-size: 16px;" />

        <MenuBar fx:id="menuBar" prefHeight="25.0" prefWidth="600.0">
            <menus>
                <Menu text="Admin" fx:id="adminMenu" visible="false">
                    <items>
                        <MenuItem fx:id="manageUsers" text="Manage Users" />
                        <MenuItem fx:id="manageBooks" text="Manage Books" />
                        <MenuItem fx:id="adminViewOrders" text="View Orders" />
                        <MenuItem fx:id="adminLogout" text="Log Out" />
                    </items>
                </Menu>
                <Menu text="Profile" fx:id="profileMenu" visible="false">
                    <items>
                        <MenuItem fx:id="viewProfile" text="View Profile" />
                        <MenuItem fx:id="userLogout" text="Log Out" />
                    </items>
                </Menu>
                <Menu text="Actions" fx:id="actionsMenu" visible="false">
                    <items>
                        <MenuItem fx:id="home" text="Home" />
                        <MenuItem fx:id="viewOrders" text="View Order" />
                        <MenuItem fx:id="viewCart" text="Shopping Cart" />
                        <MenuItem fx:id="viewBooks" text="View Books" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
		
		<Pane fx:id="contentArea" prefHeight="200.0" prefWidth="600.0" style="-fx-background-color: lightgray;"/> 
    </children>
</VBox>
