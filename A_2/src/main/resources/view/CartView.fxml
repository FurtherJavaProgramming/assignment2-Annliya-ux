<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ShoppingCartController">
    <children>
        <Label text="Shopping Cart" layoutX="10" layoutY="10" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Pane fx:id="cartPane" prefHeight="400" prefWidth="600" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
        </Pane>        
        <Button fx:id="checkoutButton" text="Checkout" layoutX="10" layoutY="420" onAction="#onCheckout"/>
    </children>
</AnchorPane>
